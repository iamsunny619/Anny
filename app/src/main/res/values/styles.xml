<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="SpashTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:windowBackground">@drawable/bg_splash</item>
    </style>

    <style name="AppBottomSheetDialogTheme" parent="Theme.MaterialComponents.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/bottomSheetWrapper</item>
    </style>

    <style name="bottomSheetWrapper" parent="Widget.Design.BottomSheet.Modal">
        <item name="color">@android:color/transparent</item>
    </style>

    <style name="MoreCorneredDialogTheme" parent="Theme.MaterialComponents.Dialog.Alert">
        <item name="dialogCornerRadius">@dimen/_18sdp</item>
    </style>

    <style name="ToolBarTheme" parent="ThemeOverlay.MaterialComponents.ActionBar">
        <item name="toolbarNavigationButtonStyle">@style/lesspaddingToolbarNavBtn</item>
    </style>

    <style name="lesspaddingToolbarNavBtn" parent="Widget.AppCompat.Toolbar.Button.Navigation">
        <item name="android:minWidth">0dp</item>
        <item name="android:paddingEnd">@dimen/_6sdp</item>
        <item name="android:paddingStart">@dimen/_8sdp</item>
    </style>

    <style name="ToolBarTextAppearance" parent="TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="fontFamily">@font/montserrat_medium</item>
        <item name="android:textSize">@dimen/_14ssp</item>
    </style>

    <style name="MaterialAlertDialogRoundedStyle" parent="ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <item name="shapeAppearanceOverlay">
            @style/customAlertShapeOverlay
        </item>
        <item name="materialAlertDialogBodyTextStyle">
            @style/customAlertBodyText
        </item>
        <item name="materialAlertDialogTitleTextStyle">
            @style/customAlertTitle
        </item>
    </style>

    <style name="customAlertShapeOverlay" parent="">
        <item name="cornerRadius">@dimen/_10sdp</item>
    </style>

    <style name="customAlertTitle" parent="MaterialAlertDialog.MaterialComponents.Title.Text">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/_14ssp</item>
        <item name="android:fontFamily">@font/montserrat_semi_bold</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="customAlertBodyText" parent="MaterialAlertDialog.MaterialComponents.Body.Text">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/_12ssp</item>
        <item name="android:textAppearance">
            @style/MyTitle_TextAppearance.MaterialComponents.Subtitle1
        </item>
    </style>

    <style name="MyTitle_TextAppearance.MaterialComponents.Subtitle1" parent="TextAppearance.MaterialComponents.Subtitle1">
        <item name="fontFamily">@font/montserrat_regular</item>
        <item name="android:fontFamily">@font/montserrat_regular</item>
    </style>


    <style name="customTabTextAppearance.Material" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">@dimen/_12ssp</item>
        <item name="textAllCaps">false</item>
        <item name="fontFamily">@font/montserrat_semi_bold</item>
    </style>
</resources>